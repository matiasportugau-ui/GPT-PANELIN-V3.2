{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "tool_name": "bom_calculate",
  "contract_version": "v1",
  "description": "Calculate a Bill of Materials for panel installation scenarios.",
  "input_schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "product_family": {"type": "string", "enum": ["ISODEC", "ISOROOF", "ISOPANEL", "ISOWALL", "ISOFRIG"]},
      "thickness_mm": {"type": "number", "minimum": 30, "maximum": 250},
      "core_type": {"type": "string", "enum": ["EPS", "PIR"]},
      "usage": {"type": "string", "enum": ["techo", "pared", "camara"]},
      "length_m": {"type": "number", "exclusiveMinimum": 0, "maximum": 30},
      "width_m": {"type": "number", "exclusiveMinimum": 0, "maximum": 20},
      "quantity_panels": {"type": "integer", "minimum": 1, "maximum": 2000}
    },
    "required": ["product_family", "thickness_mm", "usage", "length_m", "width_m"]
  },
  "output_schema": {
    "type": "object"
  },
  "error_codes": ["INVALID_DIMENSIONS", "INVALID_THICKNESS", "RULE_NOT_FOUND", "INTERNAL_ERROR"]
}
